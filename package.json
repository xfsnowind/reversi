{
    "name": "reversi",
    "version": "0.0.2",
    "private": true,

    "repository": {
        "type": "git",
        "url": "git@github.com:xfsnowind/reversi.git"
    },

    "devDependencies": {
        "browserify":          "^12.0.1",
        "babelify":            "^6.1.3",
        "babel-preset-react":  "^6.0.14",
        "closurecompiler":     "^1.5.2",

        "node-sass":           "^3.4.1",
        "json-sass":           "^1.3.5",
        "autoprefixer":        "^6.0.3",
        "postcss-cli":         "^2.3.2",
        "cssmin":              "^0.4.3",

        "live-reload":         "^1.1.0",
        "watch":               "^0.16.0",
        "http-server":         "^0.8.5",
        "parallelshell":       "^2.0.0",

        "rimraf":              "^2.4.3",
        "mkdirp":              "^0.5.1",
        "del":                 "^2.0.2",

        "babel-jest":          "^5.3.0",
        "jest-cli":            "^0.6.1",
        "react-addons-test-utils": "^0.14.1",
        "react-addons-pure-render-mixin": "^0.14.1"
    },

    "dependencies": {
        "react":         "^0.14.1",
        "react-dom":     "^0.14.1",
        "object-assign": "^4.0.1",
        "keymirror":     "^0.1.1",
        "flux":          "^2.1.1",
        "immutable":     "^3.7.5"
    },

    "scripts": {
        "env":         "env",
        "clean":       "rimraf build/css/*.css build/js/*.js src/scss/__config.scss",

        "build:dir":   "mkdirp build/css && mkdirp build/js",
        "build:js":    "browserify -d -e src/js/app.js -o build/js/reversi.js",
        "json-scss":   "json-sass -i src/constants/Config.json -o src/scss/__config.scss -p '$config:'",
        "build:css":   "node-sass --include-path src/scss < src/scss/main.scss | postcss -u autoprefixer > build/css/reversi.css",
        "build":       "npm run build:dir && npm run build:js && npm run json-scss && npm run build:css",

        "watch:js":    "watch \"npm run build:js\" src/js",
        "watch:css":   "watch \"npm run build:css\" src/scss/",
        "watch":       "parallelshell \"npm run watch:js\" \"npm run watch:css\"",

        "live-reload": "live-reload --port 9091 build/",
        "server":      "http-server -p 9090 build/",


        "prod:css":    "mkdirp deploy/css && npm run json-scss && node-sass --include-path src/scss < src/scss/main.scss | postcss -u autoprefixer | cssmin > deploy/css/reversi.css",
        "prod:js":     "mkdirp deploy/js && browserify src/js/app.js | ccjs --language_in=ECMASCRIPT6 --language_out=ES5_STRICT --compilation_level=ADVANCED_OPTIMIZATIONS --warning_level=QUIET > deploy/js/reversi.js",


        "dev":         "parallelshell \"npm run server -s\" \"npm run live-reload -s\" \"npm run watch -s\"",
        "prod":        "npm run prod:js && npm run prod:css",

        "test":        "jest --coverage"
    },

    "jest": {
        "scriptPreprocessor":         "<rootDir>/node_modules/babel-jest",
        "testFileExtensions":         ["js"],
        "moduleFileExtensions":       ["js", "json"],
        "collectCoverage":            true,
        "unmockedModulePathPatterns": ["<rootDir>/node_modules/react",
                                       "<rootDir>/node_modules/react-dom",
                                       "<rootDir>/node_modules/react-addons-test-utils",
                                       "<rootDir>/node_modules/react-addons-pure-render-mixin",
                                       "immutable",
                                       "keymirror", "object-assign",
                                       "events", "flux"]
    },

    "browserify": {
        "transform": ["babelify"]
    },

    "autoprefixer": {
        "browsers": "> 5%"
    }
}
