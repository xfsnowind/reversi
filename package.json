{
    "name": "Reversi",
    "version": "0.0.1-SNAPSHOT",
    "private": true,

    "repository": {
        "type": "git",
        "url": "git@github.com:xfsnowind/reversi.git"
    },

    "devDependencies": {
        "live-reload":     "^1.1.0",
        "browserify":      "^10.2.6",
        "babelify" :       "^6.1.2",
        "closurecompiler": "^1.5.1",
        "node-sass":       "^3.2.0",
        "postcss-cli":     "^1.3.1",
        "cssmin":          "^0.4.3",
        "rimraf":          "^2.4.1",
        "watch":           "^0.16.0",
        "http-server":     "^0.8.0",
        "parallelshell":   "^1.2.0",
        "mkdirp":          "^0.5.1",
        "del":             "^1.2.0",
        "babel-jest":      "^5.3.0",
        "jest-cli":        "^0.4.0"
    },

    "dependencies": {
        "react":         "^0.13.3",
        "object-assign": "^3.0.0",
        "keymirror":     "^0.1.1",
        "flux":          "^2.0.3",
        "lodash":        "^3.10.0",
        "immutable":     "^3.7.4"
    },

    "scripts": {
        "env":         "env",
        "clean":       "rimraf build/css/*.css build/js/*.js",

        "build:css":   "mkdirp build/css && node-sass --include-path styles < styles/main.scss | postcss -u autoprefixer > build/css/reversi.css",
        "build:js":    "mkdirp build/js && browserify src/app.js --outfile build/js/reversi.js",
        "build":       "npm run build:js && npm run build:css",

        "watch:js":    "watch \"npm run build:js\" src/",
        "watch:css":   "watch \"npm run build:css\" styles/",
        "watch":       "parallelshell \"npm run watch:js\" \"npm run watch:css\"",

        "live-reload": "live-reload --port 9091 build/",
        "server":      "http-server -p 9090 build/",


        "prod:css":    "mkdirp deploy/css && node-sass --include-path styles < styles/main.scss | postcss -u autoprefixer | cssmin > deploy/css/reversi.css",
        "prod:js":     "mkdirp deploy/js && browserify src/app.js | ccjs --language_in=ECMASCRIPT5 --compilation_level=SIMPLE_OPTIMIZATIONS > deploy/js/reversi.js",


        "dev":         "parallelshell \"npm run server -s\" \"npm run live-reload -s\" \"npm run watch -s\"",
        "prod":        "npm run prod:js && npm run prod:css",

        "test":        "jest"
    },

    "jest": {
        "scriptPreprocessor":         "<rootDir>/node_modules/babel-jest",
        "testFileExtensions":         ["es6", "js"],
        "moduleFileExtensions":       ["js", "json", "es6"],
        "collectCoverage":            true,
        "unmockedModulePathPatterns": ["react",
                                       "immutable",
                                       "keymirror",
                                       "object-assign",
                                       "events",
                                       "lodash",
                                       "flux"]
    },

    "browserify": {
        "transform": ["babelify"]
    },

    "autoprefixer": {
        "browsers": "> 5%"
    }
}
